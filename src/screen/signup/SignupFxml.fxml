<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane accessibleRole="IMAGE_VIEW" pickOnBounds="false" prefHeight="600.0" prefWidth="1000.0" stylesheets="@signupStyle.css" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screen.signup.SignupController">
    <children>
        <HBox alignment="CENTER" layoutX="5.0" layoutY="14.0" prefHeight="600.0" prefWidth="1000.0" AnchorPane.topAnchor="14.0">
            <children>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" opacity="0.73" prefHeight="375.0" prefWidth="275.0" style="-fx-background-color: white;">
                    <children>
                        <Label text="SignUp User" textFill="#070e94">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                            <VBox.margin>
                                <Insets bottom="30.0" />
                            </VBox.margin>
                        </Label>
                        <TextField fx:id="usernameText" promptText="Username" style="-fx-background-radius: 12;" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="30.0">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" />
                            </VBox.margin>
                            <font>
                                <Font size="13.0" />
                            </font>
                        </TextField>
                  <TextField fx:id="emailText" promptText="Email" style="-fx-background-radius: 12;">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </TextField>
                        <PasswordField fx:id="passwordText" promptText="Password" style="-fx-background-radius: 13;">
                            <font>
                                <Font size="13.0" />
                            </font>
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="20.0" />
                            </VBox.margin>
                        </PasswordField>
                  <PasswordField fx:id="confirmPasswordText" promptText="Confirm Password" style="-fx-background-radius: 13;">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" top="20.0" />
                     </VBox.margin>
                  </PasswordField>
                        <Button mnemonicParsing="false" onMouseClicked="#signupUser" prefHeight="25.0" prefWidth="200.0" style="-fx-background-color: #1a0dab; -fx-background-radius: 14;" text="SignUp" textFill="WHITE">
                            <VBox.margin>
                                <Insets left="20.0" right="20.0" top="30.0" />
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Button>
                        <Label text="Already have an account?" textFill="#000e8d">
                            <VBox.margin>
                                <Insets top="5.0" />
                            </VBox.margin>
                        </Label>
                        <Hyperlink onMouseClicked="#goToLogin" text="LogIn" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
